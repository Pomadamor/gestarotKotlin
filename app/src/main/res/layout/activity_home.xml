<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        android:background="@drawable/fond"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HomeActivity">

    <include layout="@layout/content_home"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center" android:paddingLeft="8dp" android:paddingTop="8dp">

        <FrameLayout
                android:id="@+id/activity_home_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


    </android.support.constraint.ConstraintLayout>






    <android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:layout_gravity="bottom|center"
                                                  android:gravity="center"
    >


        <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                            app:cardCornerRadius="18dp"
                                            app:cardElevation="5dp"
                                            android:layout_margin="8dp"
                                            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content" android:layout_gravity="center" android:layout_margin="8dp" android:drawablePadding="8dp"
                                                         android:layout_height="wrap_content" android:text="Partagez avec Facebook !" android:drawableEnd="@drawable/ic_facebook_home_logo_old"/>

        </android.support.v7.widget.CardView>


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.design.widget.CoordinatorLayout>