<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_home"
        tools:context=".activity.HomeActivity">


    <ImageView
            android:src="@drawable/joueurs_three"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:src="@drawable/joueurs_four"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.502"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"/>

    <ImageView
            android:src="@drawable/joueurs_five"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/btnFivePlayer"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Jouer à 3"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:id="@+id/btnThreePlayer"
            android:background="@color/colorBlack"
            android:textColor="@color/colorJaune"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:paddingTop="40dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Jouer à 4"
            android:id="@+id/btnFourPlayer"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:background="@color/colorBlack"
            android:textColor="@color/colorJaune"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:paddingTop="40dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:text="Jouer à 5"
            android:textColor="@color/colorJaune"
            android:background="@color/colorBlack"
            android:id="@+id/btnFivePlayer"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:paddingTop="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_percent="0.33"
                                          android:orientation="vertical"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_percent="0.67"
                                          android:orientation="vertical"/>


</android.support.constraint.ConstraintLayout>